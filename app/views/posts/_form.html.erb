<%= form_with(model: [ @discussion, @discussion.posts.build ], local:true) do |form| %>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label "Type a post here:" %><br>
    <%= form.text_area :content, class: 'form-control', id: "post-form-#{@discussion.id}" %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>