<div class="card">
  <div>
    <div class="card-header" id="post-header">
      <span style="color: white">#<%= post.discussion.posts.all.find_index(post) + 1 %></span>
      <span class="float-right">
        <% if logged_in? %>
          <%= link_to '<i class="far fa-comment-alt"></i>'.html_safe, "#post-form-#{post.discussion.id}", class: 'standard-link', id: "post-#{post.discussion.id}" %>
        <% end %>
        <% if logged_in? && current_user.id === post.user_id  %>
          <%= link_to '<i class="fas fa-times"></i>'.html_safe, [post.discussion, post], method: :delete, data: { confirm: 'Are you sure?' }, class: 'standard-link' %>
        <% end %>
      </span>
    </div>
    <div class="card-body" id=<%= "post-content-#{post.id}" %>>
      <%= post.content %>
    </div>
    <div class="card-footer">
      <strong><%= link_to post.user.username, user_path(post.user), class: 'standard-link' %></strong>
      <span class="float-right"><%= time_ago_in_words(post.created_at) %></span>
    </div>
  </div>
</div>