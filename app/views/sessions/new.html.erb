<% provide(:title, "Login") %>

<h1 class="text-center">Login</h1>

<main role="main" class="container">
  <div class="jumbotron col-md-8" style="margin: 0 auto">

    <%= form_for(:session, url: login_path) do |form| %>
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>

      <br>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <br>

      <div class="actions">
        <%= form.submit "Login", class: 'form-control btn btn-success' %>
      </div>

      <br>

      Don't have an account? Sign up <%= link_to 'here', login_path, class: 'standard-link' %>.

    <% end %>

  </div>
</main>
