<header>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to 'Country Exchange', root_url, class: 'navbar-brand' %></li>
      <li class="nav-item"><%= link_to 'Countries', countries_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to 'Cities', cities_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to 'Continents', continents_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to 'Discussions', discussions_path, class: 'nav-link' %></li>
    </ul>
    <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <span class="nav-link dropdown-toggle" id="navbardrop" data-toggle ="dropdown">
              <%= @current_user.username %>
            </span>
            <div class="dropdown-menu">
              <%= link_to 'Profile', user_path(@current_user), class: 'dropdown-item' %>
              <%= link_to 'Logout', logout_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link p-2' %></li>
          <li class="nav-item"><%= link_to 'Register', register_path, class: 'nav-link p-2' %></li>
        <% end %>
    </ul>
  </nav>
</header>

<br>